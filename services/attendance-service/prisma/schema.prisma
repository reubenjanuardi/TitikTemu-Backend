// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendance {
  id          String   @id @default(uuid())
  eventId     String   @db.Text
  userId      String   @db.Text
  checkInTime DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // NOTE: No foreign key constraints to other schemas
  // This ensures microservice isolation
  // eventId references Event from event-service (eventId is string only)
  // userId references User from auth-service (userId is string only)

  @@map("attendance_records")
}
